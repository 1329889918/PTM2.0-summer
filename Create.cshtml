@model PTM2._0.Models.Venue

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    /* 玻璃态模态框样式 */
    .glass-modal {
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        background: rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
    }

    /* 淡蓝色主题 */
    :root {
        --primary: #70c1ff;
        --secondary: #a8d8ff;
        --accent-pink: #ff9bb3;
        --accent-yellow: #ffde7d;
        --dark: #1a2337;
        --light: #f8f9fa;
    }

    /* 表单控件样式 */
    .form-control-glass {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        transition: all 0.3s ease;
    }

        .form-control-glass:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: var(--accent-pink);
            box-shadow: 0 0 0 0.25rem rgba(255, 155, 179, 0.25);
            color: white;
        }

    /* 按钮渐变效果 */
    .btn-gradient {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border: none;
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    /* 错误提示样式优化 */
    .alert-danger {
        background-color: rgba(255, 99, 132, 0.1);
        border-color: rgba(255, 99, 132, 0.2);
        color: #ef4444;
    }

    /* 自定义弹窗样式 */
    .custom-modal {
        background: rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 0.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
    }

    /* 通知样式 */
    .notification {
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 10px 20px;
        border-radius: 5px;
        z-index: 1000;
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        opacity: 0;
        transform: translateY(-20px);
        transition: all 0.3s ease;
    }

        .notification.success {
            background: linear-gradient(135deg, #6dd3b1, #4ecdc4);
        }

        .notification.error {
            background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
        }

    /* 场馆创建特定样式 */
    .venue-icon {
        font-size: 1.5rem;
        margin-right: 10px;
        color: var(--accent-blue);
    }

    .form-section {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 1.2rem;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--primary);
        display: flex;
        align-items: center;
    }
</style>

<!-- 模态框结构 -->
<div class="modal fade" id="createVenueModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content glass-modal custom-modal text-white p-4 rounded-3">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title">
                    <i class="fas fa-landmark venue-icon"></i>新建场馆
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createVenueForm" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- 场馆基本信息 -->
                    <div class="form-section">
                        <div class="form-section-title">
                            <i class="fas fa-info-circle me-2"></i>基本信息
                        </div>

                        <div class="row g-3">
                            <!-- 场馆名称 -->
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="VenueName" class="form-label">
                                        <i class="fas fa-building me-1"></i>场馆名称
                                    </label>
                                    <input asp-for="VenueName" class="form-control form-control-glass"
                                           placeholder="请输入场馆名称" required />
                                    <span asp-validation-for="VenueName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- 场馆地址 -->
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="VenueAddress" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1"></i>场馆地址
                                    </label>
                                    <input asp-for="VenueAddress" class="form-control form-control-glass"
                                           placeholder="请输入详细地址" required />
                                    <span asp-validation-for="VenueAddress" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 容量信息 -->
                    <div class="form-section">
                        <div class="form-section-title">
                            <i class="fas fa-users me-2"></i>容量信息
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label">
                                        <i class="fas fa-chart-bar me-1"></i>场馆容量
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Capacity" class="form-control form-control-glass"
                                               type="number" min="50" max="100000"
                                               placeholder="请输入场馆最大容纳人数" required />
                                        <span class="input-group-text form-control-glass">人</span>
                                    </div>
                                    <div class="form-text text-white-50 mt-1">
                                        <i class="fas fa-info-circle me-1"></i>请输入50-100,000之间的数字
                                    </div>
                                    <span asp-validation-for="Capacity" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 按钮组 -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="button" class="btn btn-outline-secondary me-md-2" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>取消
                        </button>
                        <button type="submit" class="btn btn-gradient" id="submitBtn">
                            <i class="fas fa-plus-circle me-1"></i>创建场馆
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function() {
        initVenueFormInteractions();
    });

    function initVenueFormInteractions() {
        $('#createVenueForm').off('submit').on('submit', function(e) {
            e.preventDefault();
            if ($(this).data('submitting')) return false;
            $(this).data('submitting', true);

            // 验证表单
            const validationResult = validateVenueForm();
            if (!validationResult.isValid) {
                showAlert('输入错误', validationResult.message, 'error');
                $(this).data('submitting', false);
                return false;
            }

            submitVenueForm();
        });
    }

    // 场馆表单验证
    function validateVenueForm() {
        const result = { isValid: true, message: '' };
        const errors = [];

        // 1. 必填字段检查
        const requiredFields = [
            { id: '#VenueName', name: '场馆名称' },
            { id: '#VenueAddress', name: '场馆地址' },
            { id: '#Capacity', name: '场馆容量' }
        ];

        requiredFields.forEach(field => {
            if (!$(field.id).val()) {
                errors.push(`${field.name}不能为空`);
            }
        });

        // 2. 容量验证
        const capacity = $('#Capacity').val();
        if (capacity) {
            const capacityNum = parseInt(capacity);
            if (isNaN(capacityNum) {
                errors.push('场馆容量必须是数字');
            } else if (capacityNum < 50) {
                errors.push('场馆容量不能小于50人');
            } else if (capacityNum > 100000) {
                errors.push('场馆容量不能超过100,000人');
            }
        }

        if (errors.length > 0) {
            result.isValid = false;
            result.message = errors.join('<br>');
        }

        return result;
    }

    // 提交场馆表单
    function submitVenueForm() {
        const form = $('#createVenueForm');
        const $submitBtn = $('#submitBtn');
        const originalBtnHtml = $submitBtn.html();

        // 更新按钮状态
        $submitBtn.prop('disabled', true);
        $submitBtn.html('<i class="fas fa-spinner fa-spin me-1"></i>提交中...');

        $.ajax({
            type: 'POST',
            url: form.attr('action'),
            data: form.serialize(),
            success: function(response) {
                if (response.success) {
                    // 成功处理
                    $('#createVenueModal').modal('hide');
                    showNotification('success', '场馆创建成功！');

                    // 重置表单
                    form[0].reset();
                    form.data('submitting', false);

                    // 刷新页面
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    // 错误处理
                    let errorMessage = '提交失败，请检查输入';
                    if (response.errors && response.errors.length > 0) {
                        errorMessage = response.errors.join('<br>');
                    }
                    showAlert('提交失败', errorMessage, 'error');
                }
            },
            error: function() {
                showAlert('错误', '服务器错误，请稍后再试', 'error');
            },
            complete: function() {
                // 恢复按钮状态
                $submitBtn.prop('disabled', false);
                $submitBtn.html(originalBtnHtml);
                form.data('submitting', false);
            }
        });
    }

    // 显示通知
    function showNotification(type, message) {
        const notification = $('<div class="notification ' + type + '">' + message + '</div>').appendTo('body');
        notification.css({ opacity: 0, top: '-50px' })
            .animate({ opacity: 1, top: '20px' }, 300);

        setTimeout(() => {
            notification.animate({ opacity: 0, top: '-50px' }, 300, function() {
                $(this).remove();
            });
        }, 3000);
    }

    // 显示弹窗
    function showAlert(title, message, type) {
        // 创建或更新弹窗
        let $alert = $('#customAlert');
        if ($alert.length === 0) {
            $alert = $(`
                <div id="customAlert" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content glass-modal">
                            <div class="modal-header">
                                <h5 class="modal-title"></h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body"></div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">确定</button>
                            </div>
                        </div>
                    </div>
                </div>
            `).appendTo('body');
        }

        // 设置内容
        $alert.find('.modal-title').html(`<i class="fas ${getIconClass(type)} me-2"></i>${title}`);
        $alert.find('.modal-body').html(message);

        // 显示弹窗
        $alert.modal('show');
    }

    function getIconClass(type) {
        const icons = {
            'success': 'fa-check-circle text-success',
            'error': 'fa-exclamation-circle text-danger',
            'warning': 'fa-exclamation-triangle text-warning'
        };
        return icons[type] || 'fa-info-circle text-info';
    }
</script>