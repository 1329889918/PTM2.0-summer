@model PTM2._0.Models.Venue

@{
    ViewData["Title"] = "场馆详情";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    a {
        text-decoration: none;
    }

    :root {
        --primary: #70c1ff;
        --secondary: #a8d8ff;
        --accent-pink: #ff9bb3;
        --accent-yellow: #ffde7d;
        --dark: #1a2337;
        --light: #f8f9fa;
        --success: #6dd3b1;
        --warning: #ffde7d;
        --danger: #ff6b6b;
    }

    body {
        background: linear-gradient(135deg, var(--dark) 0%, #1e3a5a 100%);
        color: var(--light);
        min-height: 100vh;
        background-attachment: fixed;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 15px;
        padding: 30px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        margin: 30px 0;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .dashboard-title {
        font-size: 2.2rem;
        margin: 0 0 30px;
        display: flex;
        align-items: center;
        gap: 15px;
        font-weight: 600;
        color: var(--primary);
    }

        .dashboard-title::after {
            content: "";
            flex: 1;
            height: 2px;
            background: linear-gradient(to right, #70c1ff, transparent);
            margin-left: 15px;
        }

    .details-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 30px;
        margin-bottom: 30px;
    }

    .detail-row {
        display: flex;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        width: 30%;
        font-weight: 600;
        color: #70c1ff;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .detail-value {
        width: 70%;
        color: var(--light);
        font-size: 1.1rem;
    }

    .venue-icon {
        background: linear-gradient(135deg, var(--accent-blue), #70c1ff);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #1a2337;
        font-size: 1.5rem;
        margin-right: 15px;
    }

    .capacity-badge {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        display: inline-block;
        white-space: nowrap;
    }

    .capacity-low {
        background: rgba(255, 87, 34, 0.2);
        color: #FF5722;
    }

    .capacity-medium {
        background: rgba(255, 152, 0, 0.2);
        color: #FF9800;
    }

    .capacity-high {
        background: rgba(76, 175, 80, 0.2);
        color: #4CAF50;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
        margin-top: 40px;
        justify-content: flex-end;
    }

    .btn-edit {
        background: linear-gradient(135deg,#70c1ff);
        border: none;
        color: #1a2337;
        padding: 12px 35px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.05rem;
    }

        .btn-edit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(255, 208, 92, 0.25);
        }

    .btn-back {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.05rem;
    }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-3px);
            border-color: var(--accent-blue);
        }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--accent-blue);
        margin: 10px 0;
    }

    .stat-label {
        font-size: 1rem;
        opacity: 0.8;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .map-container {
        height: 200px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        margin-top: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--accent-blue);
        font-size: 1.2rem;
        gap: 15px;
    }
</style>

<div class="container">
    <div class="glass-card">
        <div class="dashboard-title">
            <i class="fas fa-landmark"></i>
            <span>场馆详情信息</span>
        </div>

        <!-- 场馆信息概览 -->
        <div class="details-card">
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-hashtag"></i>
                    <span>场馆ID</span>
                </div>
                <div class="detail-value">@Html.DisplayFor(model => model.VenueID)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-building"></i>
                    <span>场馆名称</span>
                </div>
                <div class="detail-value">@Html.DisplayFor(model => model.VenueName)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>场馆地址</span>
                </div>
                <div class="detail-value">@Html.DisplayFor(model => model.VenueAddress)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-users"></i>
                    <span>场馆容量</span>
                </div>
                <div class="detail-value">
                    @{
                        string capacityClass = "capacity-high";
                        string capacityStatus = "容量充足";

                        if (Model.Capacity < 1000)
                        {
                            capacityClass = "capacity-low";
                            capacityStatus = "小型场馆";
                        }
                        else if (Model.Capacity < 5000)
                        {
                            capacityClass = "capacity-medium";
                            capacityStatus = "中型场馆";
                        }
                        else
                        {
                            capacityStatus = "大型场馆";
                        }
                    }
                    <span class="capacity-badge @capacityClass">@capacityStatus</span>
                    @Html.DisplayFor(model => model.Capacity) 人
                </div>
            </div>
        </div>



        <div class="action-buttons">
            <a asp-action="Index" class="btn-back">
                <i class="fa fa-arrow-left mr-2"></i>返回列表
            </a>
            <a asp-action="Edit" asp-route-id="@Model.VenueID" class="btn-edit">
                <i class="fa fa-edit mr-2"></i>编辑场馆
            </a>
        </div>
    </div>
</div>