@model PTM2._0.Models.Venue
@{
    ViewData["Title"] = "编辑场馆信息";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    a {
        text-decoration: none;
    }

    :root {
        --primary: #70c1ff;
        --secondary: #a8d8ff;
        --accent-pink: #ff9bb3;
        --accent-yellow: #ffde7d;
        --dark: #1a2337;
        --light: #f8f9fa;
        --success: #6dd3b1;
        --warning: #ffde7d;
        --danger: #ff6b6b;
    }

    body {
        background: linear-gradient(135deg, var(--dark) 0%, #1e3a5a 100%);
        color: var(--light);
        min-height: 100vh;
        background-attachment: fixed;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 15px;
        padding: 30px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        margin: 30px 0;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .dashboard-title {
        font-size: 2.2rem;
        margin: 0 0 30px;
        display: flex;
        align-items: center;
        gap: 15px;
        font-weight: 600;
        color: var(--primary);
    }

        .dashboard-title::after {
            content: "";
            flex: 1;
            height: 2px;
            background: linear-gradient(to right,var(--accent-pink), transparent);
            margin-left: 15px;
        }

    .form-glass {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 30px;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        color: #70c1ff;
        font-weight: 500;
        margin-bottom: 10px;
        display: block;
        font-size: 1.1rem;
    }

    .form-control-glass {
        background: rgba(26, 35, 55, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: var(--light);
        padding: 12px 18px;
        border-radius: 10px;
        width: 100%;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .form-control-glass:focus {
            background: rgba(26, 35, 55, 0.8);
            border-color: #ff7e9d;
            box-shadow: 0 0 0 0.25rem rgba(255, 222, 125, 0.15);
            outline: none;
        }

    .text-danger {
        color: var(--danger);
        font-size: 0.9rem;
        margin-top: 8px;
        display: block;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
        margin-top: 40px;
        justify-content: flex-end;
    }

    .btn-save {
        color:white;
        background: linear-gradient(135deg, var(--accent-pink));
        border: none;
        color: #1a2337;
        padding: 12px 35px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.05rem;
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(255, 208, 92, 0.25);
        }

    .btn-back {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.05rem;
    }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-3px);
            border-color: #70c1ff;
        }

    .venue-icon {
        background: linear-gradient(135deg,  #70c1ff);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #1a2337;
        font-size: 1.5rem;
        margin-right: 15px;
    }

    .venue-detail {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 30px;
    }

    .venue-info {
        flex: 1;
    }

    .venue-id {
        font-size: 0.9rem;
        opacity: 0.8;
        margin-bottom: 5px;
    }

    .venue-name-display {
        font-size: 1.4rem;
        font-weight: 600;
        color: #70c1ff;
        margin-bottom: 5px;
    }

    .venue-address-display {
        font-size: 1rem;
        opacity: 0.9;
    }

    .capacity-display {
        font-size: 1.1rem;
        font-weight: 600;
        background: rgba(255, 222, 125, 0.15);
        padding: 5px 15px;
        border-radius: 20px;
        color: #70c1ff;
    }

    .notification {
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 15px 25px;
        border-radius: 8px;
        z-index: 1000;
        color: white;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
        opacity: 0;
        transform: translateY(-30px);
        transition: all 0.4s ease;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .notification.success {
            background: linear-gradient(135deg, #6dd3b1, #4ecdc4);
        }

        .notification.error {
            background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
        }

        .notification.warning {
            background: linear-gradient(135deg, #ffde7d, #ffca6d);
            color: #1a2337;
        }

        .notification i {
            font-size: 1.2rem;
        }

    .input-icon {
        position: absolute;
        right: 15px;
        top: 42px;
        color: #70c1ff;
        font-size: 1.2rem;
    }
</style>

<div class="container">
    <div class="glass-card">
        <div class="dashboard-title">
            <i class="fas fa-landmark"></i>
            <span>编辑场馆信息</span>
        </div>

        <!-- 场馆信息概览 -->
        <div class="venue-detail">
            <div class="venue-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="venue-info">
                <div class="venue-id">场馆ID: @Model.VenueID</div>
                <div class="venue-name-display">@Model.VenueName</div>
                <div class="venue-address-display">@Model.VenueAddress</div>
            </div>
            <div class="capacity-display">@Model.Capacity 人</div>
        </div>

        <div class="form-glass">
            <form asp-action="Edit" id="venueForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VenueID" />

                <div class="form-group">
                    <label asp-for="VenueName" class="form-label">场馆名称</label>
                    <input asp-for="VenueName" class="form-control-glass" required />
                    <span asp-validation-for="VenueName" class="text-danger"></span>
                    <div class="input-icon">
                        <i class="fas fa-building"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VenueAddress" class="form-label">场馆地址</label>
                    <input asp-for="VenueAddress" class="form-control-glass" required />
                    <span asp-validation-for="VenueAddress" class="text-danger"></span>
                    <div class="input-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Capacity" class="form-label">场馆容量</label>
                    <div class="input-group">
                        <input asp-for="Capacity" type="number" min="50" max="100000" class="form-control-glass" required />
                    </div>
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                    <div class="input-icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>

                <div class="action-buttons">
                    <a asp-action="Index" class="btn-back">
                        <i class="fa fa-arrow-left mr-2"></i>返回列表
                    </a>
                    <button type="submit" class="btn-save">
                        <i class="fa fa-save mr-2"></i>保存修改
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // 初始化表单交互
        initFormInteractions();
    });

    function initFormInteractions() {
        // 表单提交处理
        $('#venueForm').on('submit', function(e) {
            // 验证表单
            const validationResult = validateVenueForm();
            if (!validationResult.isValid) {
                e.preventDefault();
                showNotification('warning', validationResult.message);
                return false;
            }

            // 显示保存中状态
            const $submitBtn = $('.btn-save');
            const originalBtnHtml = $submitBtn.html();
            $submitBtn.html('<i class="fas fa-spinner fa-spin mr-2"></i>保存中...');
        });
    }

    // 表单验证
    function validateVenueForm() {
        const result = { isValid: true, message: '' };
        const errors = [];

        // 1. 必填字段检查
        const requiredFields = [
            { id: '#VenueName', name: '场馆名称' },
            { id: '#VenueAddress', name: '场馆地址' },
            { id: '#Capacity', name: '场馆容量' }
        ];

        requiredFields.forEach(field => {
            if (!$(field.id).val()) {
                errors.push(`${field.name}不能为空`);
            }
        });

        // 2. 容量验证
        const capacity = $('#Capacity').val();
        if (capacity) {
            const capacityNum = parseInt(capacity);
            if (isNaN(capacityNum)) {
                errors.push('场馆容量必须是数字');
            } else if (capacityNum < 50) {
                errors.push('场馆容量不能小于50人');
            } else if (capacityNum > 100000) {
                errors.push('场馆容量不能超过100,000人');
            }
        }

        if (errors.length > 0) {
            result.isValid = false;
            result.message = errors.join('<br>');
        }

        return result;
    }

    // 显示通知
    function showNotification(type, message) {
        const icons = {
            'success': 'fa-check-circle',
            'error': 'fa-exclamation-circle',
            'warning': 'fa-exclamation-triangle'
        };

        const icon = icons[type] || 'fa-info-circle';

        // 移除现有通知
        $('.notification').remove();

        // 创建新通知
        const notification = $(`
            <div class="notification ${type}">
                <i class="fas ${icon}"></i>
                <span>${message}</span>
            </div>
        `).appendTo('body');

        // 动画显示
        setTimeout(() => {
            notification.css({
                opacity: 1,
                transform: 'translateY(0)'
            });
        }, 10);

        // 3秒后消失
        setTimeout(() => {
            notification.css({
                opacity: 0,
                transform: 'translateY(-30px)'
            }).on('transitionend', function() {
                $(this).remove();
            });
        }, 3000);
    }
</script>